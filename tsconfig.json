{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "app/(root)/admin/page.jsx", "app/(root)/layout.jsx", "prisma/prisma.js", "app/api/auth/[...nextauth]/route.js", "app/api/s3/route.js", "app/(root)/middleware.js", "components/ui/animations.jsx", "components/NavigationMenu.jsx", "app/(root)/blog/page.jsx"],
  "exclude": ["node_modules"]
}
